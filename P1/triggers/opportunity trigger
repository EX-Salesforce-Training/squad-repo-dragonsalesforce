trigger OpportunityTrigger on Opportunity (before insert, before update, before delete, after insert, after update, after delete, after undelete) {
Switch on Trigger.OperationType {
        when BEFORE_INSERT {
          TriggerHelper.createTaskOpp(trigger.new);
        } 
        when BEFORE_UPDATE {
    
        }
        when BEFORE_DELETE {
            TriggerHelper.preventOppDelete(trigger.old);
            
        }
        when AFTER_INSERT {
            
        }
        when AFTER_UPDATE {
            
        }
        when AFTER_DELETE {
            
        }
        when AFTER_UNDELETE {
            
        } when else {
            
        }
        
    }
}
